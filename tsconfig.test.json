{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "verbatimModuleSyntax": false,
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "outDir": "./dist/test",
    "allowImportingTsExtensions": false
  },
  "include": ["tests", "src"],
  "exclude": ["node_modules"]
}